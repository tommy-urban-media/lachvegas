img
  width: auto
  max-width: 100%
  height: auto
  display: block




.infobox
  width: auto
  height: auto
  display: block
  margin: 0 auto
  padding-top: 0
  align-content: center
  justify-content: center
  position: relative
  overflow: hidden

  &--portrait
    width: 300px
    height: 600px
    max-width: 100%
    text-align: center

  &--banner
    width: 100%
    max-height: 800px
    min-height: 80px
    text-align: left

  &--banner-large
    width: 100%
    max-width: 800px
    height: 280px
    text-align: left

  &--square
    width: 100%
    height: 100%



  &__image
    z-index: 1
    position: absolute

  &__content
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    padding: 50px 20px
    color: #fff
    z-index: 2
    position: absolute
    top: 0
    left: 0

    &--gradient
      background: linear-gradient(top, #72c5ff, #3d7398)

    .product-headline
      font-size: 32px
      font-weight: 700
      letter-spacing: 1px
      text-transform: uppercase

    .product-title
      display: block
      margin: 20px auto
      padding: 5px 25px
      color: #ffffff
      font-size: 32px
      font-weight: 900
      background-color: #ce0000

    .product-text
      padding: 20px
      text-shadow: #000 0 0 1px
      background: alpha(#000, 0.8)

    .product-cta-button
      margin: 20px auto
      padding: 10px 0
      color: #fff
      background: #35e0c4



  &__feature-list
    display: flex
    justify-content: space-between

    li
      margin: 0 4px 4px 0
      padding: 2px 4px
      display: block
      font-size: 13px
      background: #303030

      svg
        margin-right: 4px
        color: #ffd800


    
    

.infobox--bierweise
  height: 200px

  .infobox__stage
    height: 100%
    background: linear-gradient(top, #f7c41a, #e58e00)

  .infobox__title
    color: #303030
    font-size: 24px
    font-weight: bold

  .infobox__text
    color: #303030
    font-size: 13px
    text-align: center

  .infobox__button
    margin: 10px auto
    padding: 10px 20px
    color: #fff
    font-size: 20px
    font-weight: bold
    text-align: center
    background: darken(#e58e00, 30%)



  .foam
    height: 48px
    background: linear-gradient(top, #f0f0f0, #e9e9e9)

  .bubbles
    width: 100%
    height: 100%
    top: 0
    left: 0
    position: absolute

    span
      width: 32px
      height: 32px
      filter: blur(2px)
      border-radius: 50%
      background-color: alpha(#f0f0f0, 40%)
      z-index: 2
      position: absolute
      left: 50%
      top: 50%

      &:nth-child(2)
        left: 67%
        top: 80%
        transform: scale(0.8)
      &:nth-child(3)
        left: 12%
        top: 43%
        transform: scale(0.88)





