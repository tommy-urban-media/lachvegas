.animation
  width: 100%
  height: 100%
  min-height: 200px
  margin: 0
  display: block
  position: relative
  overflow: hidden
  background-color: steelblue
  
  &__tab
    width: 100%
    height: 100%
    opacity: 0.0
    animation: blubb 6s infinite
    position: absolute
    left: 0
    top: 0

  &--c3
    div
      &:nth-child(1)
        animation-delay: 2s
      &:nth-child(2)
        animation-delay: 4s
      &:nth-child(3)
        animation-delay: 6s
  

@keyframes blubb
  0%
    opacity: 1.0
  100%
    opacity: 0.0
