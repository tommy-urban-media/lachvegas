$height = 38px;

.ticker
    width: 100%
    max-width: 1000px
    margin: 20px 0 0 -500px
    display: none
    flex-wrap: wrap
    z-index: 100
    position: relative
    left: 50%
    bottom: 0
    color: $colors.white
    overflow: hidden
    border: 2px solid $colors.red
    
    @media screen and (min-width: 1000px)
        display: flex
        flex-wrap: nowrap
        justify-content: space-between

    &__header
        display: block
        height: 48px
        padding: 4px 8px
        text-align: left
        background: $colors.red

    &__body
        width: 100%
        height: 48px
        display: block
        background-color: #fff


.ticker__title
    width: auto
    font-size: 13px
    text-align: left
    text-transform: uppercase
    
    @media screen and (max-width: 480px)
        padding: 0 10px
        font-size: 10px


.ticker__list-wrapper
    width: 100%
    height: 48px
    display: flex
    flex-wrap: no-wrap
    overflow: hidden

.ticker__list
    width: 100%
    display: flex
    flex-wrap: nowrap
    margin-top: 0
    animation: ticker3 100s linear 2500ms infinite
    //white-space: nowrap
    
    &:hover
        animation-play-state: paused


.ticker__list-item
    width: auto
    height: 48px
    margin-right: 5px
    display: block
    font-size: 16px
    line-height: 48px
    position: relative
    white-space: nowrap
    
    &:before
        content: '+++'
        margin: 0 5px
        color: #c0c0c0
    
    a
        color: #333333
    
        
    @media screen and (max-width: 600px)
        padding: 0 20px
        font-size: 11px
        
        
        
