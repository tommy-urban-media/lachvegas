
.banner
	width: 100%
	max-width: 800px
	height: 90px
	padding-top: 15px
	display: flex
	justify-content: center
	align-items: center
	margin: 0 auto
	text-align: center
	position: relative

	&--large
		height: 240px

	&--red
		color: #fff
	
		.banner__content
			background: #ff1b1b

		.banner__link
			color: #ff1b1b
			background: #fff

	&:before
		content: 'Bekloppte Anzeige' 
		width: 100%
		color: #c0c0c0
		font-size: 10px
		text-align: center
		position: absolute
		top: 0
		left: 0


	&__content
		width: 100%
		height: 100%
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
		overflow: hidden
		position: relative

	
	&__headline
	&__title
		margin: 0 0 15px 0
		font-size: 24px
		font-weight: 700
		text-transform: uppercase

	&__text
		margin: 0 0 10px 0

	&__link
		padding: 6px 12px
		color: #fff
		text-align: center



	// special banners

	&--support

		&:before
			content: 'WICHTIGE INFORMATION' 

		.banner__content
			color: #ffffff
			text-align: center
			justify-content: center
			background: #ff5d1c

		.banner__link
			color: #ff5d1c
			background: #fff
		

