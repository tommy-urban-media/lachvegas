.job-list
    width: 100%
    display: flex
    flex-wrap: wrap
    justify-content: space-between


.job-item
    width: 100%
    padding: 15px 25px
    border-bottom: 1px solid #e9e9e9

    .job-title
        margin: 0
        color: steelblue
        font-size: 18px

    .job-company
        margin: 0 0 10px 0
        color: #696969
        font-size: 14px
        font-weight: bold
        line-height: 20px

    .job-description
        margin: 10px 0
        font-size: 12px
        line-height: 18px

    .job-link
        &:hover
        .job-title
            color: lighten(steelblue, 20%)