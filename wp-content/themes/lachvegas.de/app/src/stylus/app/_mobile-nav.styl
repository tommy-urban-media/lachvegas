
.mobile-nav-icon
    width: 32px
    height: 4px
    display: block
    cursor: pointer
    z-index: 1000
    top: 17px
    position: relative
    background-color: $colors.white

    &:hover
      background-color: $colors.red

      &:before
      &:after
        background-color: $colors.red

    &:before
    &:after
      content: ''
      width: 32px
      height: 4px
      position: absolute
      left: 0
      top: -8px
      background-color: $colors.white

    &:after
      top: 8px

    @media $query.l
        display: none

    
.mobile-nav-wrapper
    width: 100%
    height: 100%
    display: block
    z-index: 100
    position: fixed
    top: 0
    left: 0
    overflow: scroll
    visibility: hidden

    &.active
        z-index: 10000
        visibility: visible

.mobile-nav-bg
    width: 100%
    height: 100%
    opacity: 0.0
    z-index: 1
    position: fixed
    top: 0
    left: 0
    transition: opacity 250ms ease-in-out 
    background-color: #000000

    &.fade
        opacity: 0.5

.mobile-nav
    width: 280px
    display: flex
    flex-wrap: wrap
    color: #999
    z-index: 2
    position: relative
    transform: translateX(-280px)
    transition: transform 250ms ease-in-out
    background-color: #303030

    &.fade
        transform: translateX(0)
