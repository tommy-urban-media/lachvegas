.teasers-images
	padding: 0 40px
	display: block

	&:after
		content: ''
		clear: both
		display: table


	li
		width: 176px
		height: 175px
		margin: 0 10px 10px 0
		padding: 0
		float: left
		text-align: center
		border-top-left-radius: 6px
		border-top-right-radius: 6px
		transition: background-color 200ms ease

		&:first-child
			width: 360px
			height: 360px
			display: block

		&:nth-child(4)
		&:nth-child(7)
			margin-right: 0

		&:hover
			background-color: #f5f5f5

		img
			width: 100%
			height: 100%
			display: block

		.image-wrapper
			width: 80px
			height: 80px
			display: block
			margin: 0 auto
			border-radius: 50%
			overflow: hidden

		.person-role
			margin: 10px 0 5px 0
			color: #c0c0c0
			display: block
			font-size: 12px

		.person-name
			color: #303030
			display: block
			font-size: 13px
			font-weight: bold