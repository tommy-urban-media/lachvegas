$gap = 20px


.section
	width: 100%
	min-width: 100%
	margin: $gap auto
	padding: $gap 0
	position: relative
	display: flex
	flex-wrap: wrap
	background-color: $colors.white
	//border: 1px solid #e9e9e9
	//box-shadow: 0 0 1px #fff
	//border-bottom: 2px solid #e9e9e9

	&__pane
		width: 100%


	&__body
		display: flex
		justify-content: space-between
		flex-wrap: wrap 

		@media $query.m
			flex-wrap: nowrap

			& > div
				flex-grow: 5
				flex-basis: 0
				&:nth-child(2)
					flex-grow: 2
					margin-right: 40px
					padding: 20px
					background: #f0f0f0


	&-sidebar
		display: block
		margin-bottom: 20px
		padding: 20px
		border: 1px solid #f0f0f0




	&__area
		max-width: 100%
		min-width: 100%
		margin: 0 auto
		display: flex


	&__header
		margin: 0 0 20px 0
		padding: 0 5%
		display: flex
		justify-content: space-between
		align-items: baseline

		@media screen and (min-width: 1000px)
			padding: 0 40px

	&__title
		margin: 0
		color: #303030
		font-size: 24px
		font-weight: 300
		white-space: nowrap

		a
			color: #303030

			&:hover
				color: $colors.red


	&__separator
		width: 100%
		margin: 0 0 0 10px
		display: block
		border-top: 4px solid #f0f0f0


	&__content
		padding: 0
		display: block
		text-align: left

	&-content
		margin: 0
		padding: 0 40px
		display: block

	&__area__full
		width: 100%
		padding: 0 40px

	&__area__main
		width: 70%
		padding: 0 25px 0 50px

	&__area__sidebar
		width: 30%
		padding: 0 50px 0 25px



	&__footer
		margin: 20px 0 0 0
		padding: 0 40px
		display: flex
		flex-wrap: wrap
		justify-content: left



	&--home
		background-color: transparent

	&--people
		background: #fff


	// special sections

	&--gender
		width: 100%
		padding: 0
		display: flex
		justify-content: space-between
		


	&-search
		padding: 0
		background: none
		border: 0

		.section-headline
			padding: 0
			display: none

		.section-content
			padding: 0

		.form

			.search-field
				width: 70%
				float: left
				transition: border-color 150ms ease-in-out

				&:focus
					border-color: $colors.blue

			.search-button
				width: 30%
				float: left




	&-latest-posts
		display: block

		li
			clearfix()
			margin: 0 0 10px 0
			padding: 0 0 10px 0

		img
			width: 100px
			height: 100px
			float: left

		.post-title
			margin: 0
			display: block


	&-tags

		li
			width: 50%
			margin: 0
			float: left




	&-featured-post
	&-featured-project

		.post-title
			margin: 5px 0
			font-size: 1.05em

		img
			width: 100%
			display: block





.section-news
	padding: 20px
	background-color: #f0f0f0

	@media $query.m
		padding: 40px

	.news-headline
		margin: 0 0 20px 0

	.news-list__item
		margin: 0 0 5px 0
		padding: 0 0 5px 0