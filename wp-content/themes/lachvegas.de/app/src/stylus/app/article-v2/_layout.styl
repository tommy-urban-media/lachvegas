
.article-wrapper
    width: 100%
    margin: 20px auto
    padding: 20px
    display: flex
    flex-wrap: wrap
    background-color: #fff
    border: 1px solid #e9e9e9
    border-bottom: 2px solid #e9e9e9
    box-shadow: 0 0 1px #f0f0f0
    position: relative

    @media $query.xl
        margin: 40px auto
        padding: 40px


.article
    width: 720px
    max-width: 100%
    display: block
    margin: 0 auto
    text-align: left

    @media $query.xl
        margin: 50px auto 0 auto