
.header
	width: 100%
	height: 40px
	margin: 0 auto
	padding: 0
	color: $colors.white
	position: fixed
	left: 0
	top: 0
	text-align: center
	background-color: $colors.black
	border-bottom: 2px solid $colors.black
	z-index: 99

	&__inner
		width: 100%
		max-width: 1000px
		margin: 0 auto
		position: relative
		display: flex
		flex-wrap: nowrap
		justify-content: space-between

	  @media screen and (max-width: 1000px)
			padding: 0 20px

	&__right
		display: flex
		justify-content: right

	.page-title
		line-height: 42px

	.page-name
		width: 155px
		display: flex
		padding: 0 0 0 10px
		height: 40px
		font-family: 'Montserrat'
		font-weight: 600
		//text-transform: uppercase
		//box-shadow: 0 1px 1px #fff
		//border-bottom: 2px solid lighten($colors.red, 20%)
		//background: linear-gradient(top, $colors.red, darken($colors.red, 25%))
		background: #f9f9f9 //darken($colors.red, 25%)

		img
			margin-right: 8px

	.page-name-num
		color: gray
		font-size: 16px

	.page-name-txt
		color: $colors.red
		font-size: 16px
		text-align: left

	a
		color: $colors.white
		text-decoration: none



.search-label
	display: block
	width: 40px
	height: 40px
	font-size: 15px
	cursor: pointer
	line-height: 40px

	&:hover
		color: #fff

.search-area
	//width: 0
	//margin-top: 4px
	overflow: hidden
	z-index: 1
	//position: absolute
	//top: 0
	//right: 40px
	transition: width 250ms ease-in-out

	&.is-expanded
		width: 320px

	.search-group
		width: 100%
		display: flex

	.search-field
		flex-grow: 2
		height: 40px
		padding: 6px 12px
		font-size: 13px
		border: 1px solid #f0f0f0
		outline: 0
		background: #fff

	.search-submit
		margin-left: -5px
		height: 40px
		padding: 6px 12px
		color: #fff
		font-size: 13px
		font-weight: bold
		background: $colors.red
		border: 1px solid #f0f0f0




.subheader
	padding: 0 20px
	margin: 50px 0 10px 0
	display: flex
	flex-wrap: wrap
	justify-content: center

	@media $query.m
		padding: 0
		flex-wrap: nowrap
		justify-content: space-between

.page-slogan
	margin: 0 0 10px 0
	display: flex
	flex-wrap: wrap
	justify-content: center
	color: silver
	font-family: 'Indie Flower', cursive
	font-size: 17px
	//transform: rotate(-1deg)
	position: relative

	@media $query.m
		margin: 0
		justify-content: left


	div
		margin-right: 5px

		&:nth-child(1)
		&:nth-child(5)
		&:nth-child(8)
		&:nth-child(12)
			transform: rotate(-2deg)

		&:nth-child(2)
		&:nth-child(7)
		&:nth-child(9)
			transform: rotate(3deg) 

		&:nth-child(3)
		&:nth-child(6)
		&:nth-child(10)
			transform: rotate(2deg) 

		&:nth-child(4)
		&:nth-child(11)
		&:nth-child(13)
			transform: rotate(-3deg) 