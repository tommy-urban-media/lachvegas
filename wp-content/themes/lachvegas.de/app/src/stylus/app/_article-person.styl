.article-person

	display: block

	&__header
	&__content
		width: 100%
		padding: 20px 50px
		display: flex
		justify-content: left
		align-items: top

		&--left
			width: 120px
			min-width: 120px
			margin-right: 20px
			display: block
			overflow: hidden

		&--right
			width: auto


	&__title-area
		width: 100%
		display: flex
		flex-wrap: wrap
		justify-content: space-between

		&--top
		&--bottom
			width: 100%
			padding: 0 0 10px 0

		&--top
			border-bottom: 2px solid #f0f0f0

		&--bottom
			padding-top: 10px

			p
				color: #808080
				font-size: 13px
				line-height: 160%

			ol
				display: flex
				flex-wrap: wrap
				li
					color: #808080
					font-size: 13px
					line-height: 140%
					&:before
						content: '+++'
						margin: 0 8px 0 0
					&:after
						margin-right: 8px
						display: inline



.person-image
	width: 110px
	height: auto
	display: block
	overflow: hidden
	border-radius: 50%
	border: 4px solid #f0f0f0


.person-title
	margin: 0
	font-size: 22px

.person-roles

	&__role
		color: #808080
		font-size: 13px

		&:after
			content: '#'
			margin: 0 6px 0 8px
			display: inline

		&:last-child
			&:after
				display: none
