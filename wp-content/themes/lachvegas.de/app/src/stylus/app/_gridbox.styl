}

.gridbox
	width: 1000px
	max-width: 100%
	background: transparent url('../../images/bg-paint.jpg') no-repeat top center
	background-size: 100% 100%
	
	@media screen and (min-width: 1000px)
		display: grid
		grid-gap: 0
		grid-template-columns: repeat(2, 500px)
		grid-template-rows: repeat(3, 260px)
		justify-content: center
		align-content: end 

	&__item
		//margin: 10px 
		padding: 20px
		position: relative
		display: flex
		align-items: center
		background-repeat: no-repeat
		background-size: 100% 100%

