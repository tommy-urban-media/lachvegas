
.most-viewed-articles
	width: 100%
	min-width: 100%
	margin: 20px auto
	padding: 20px
	position: relative
	display: flex
	flex-wrap: wrap
	font-size: 13px
	background-color: $colors.white
	//border: 1px solid #e9e9e9
	//box-shadow: 0 0 1px #fff
	//border-bottom: 2px solid #e9e9e9

	&__list
		display: block
		padding-left: 20px
		list-style: decimal
		counter-reset: oll-counter

		li
			margin-bottom: 20px
			counter-increment: oll-counter

	a
		display: block
		color: #303030
		font-size: 14px
		font-weight: bold
		text-decoration: none

		&:hover
			text-decoration: underline

	h3
		margin: 0 0 10px 0