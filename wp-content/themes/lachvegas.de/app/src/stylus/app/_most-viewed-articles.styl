
.most-viewed-articles
	width: 100%
	min-width: 100%
	margin: 20px auto
	padding: 20px
	position: relative
	display: flex
	flex-wrap: wrap
	font-size: 13px
	background-color: $colors.white
	//border: 1px solid #e9e9e9
	//box-shadow: 0 0 1px #fff
	//border-bottom: 2px solid #e9e9e9

	&__list
		display: block
		padding-left: 36px
		list-style: none
		counter-reset: oll-counter

		li
			margin-bottom: 20px
			position: relative
			counter-increment: oll-counter

			&:before
				width: 24px
				height: 24px
				content: counter(oll-counter)
				color: $colors.red
				font-size: 13px
				font-weight: bold
				line-height: 24px
				text-align: center
				position: absolute
				top: 2px 
				left: -36px
				border-radius: 50%
				background-color: #303030
				transform: rotate(5deg)

	a
		display: block
		color: #303030
		font-size: 13px
		font-weight: 500
		text-decoration: none

		&:hover
			text-decoration: underline

	h3
		margin: 0 0 20px 0
		font-weight: 300
		font-size: 13px