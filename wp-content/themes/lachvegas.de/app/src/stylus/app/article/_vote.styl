.post-votes

  width: 100%
  height: 24px
  margin: 0 0 15px 0
  display: block
  text-indent: 5px
  background-color: $colors.lightGrey

  & > span
    width: 0
    height: 24px
    padding: 0
    display: block
    float: left
    color: $colors.white
    font-size: 11px
    line-height: 24px
    white-space: nowrap
    overflow: hidden
    transition: width 250ms ease-in-out

  .post-votes-up
    background-color: $colors.green

  .post-votes-down
    background-color: $colors.red

  .post-votes-neutral
    background-color: $colors.yellow


.article-list
.post-list

  .post-votes
    margin: 5px 0 0 0
    height: 4px

    & > span
      height: 4px




.article-votes
    width: 100%
    margin-top: 50px
    padding: 20px
    display: flex
    flex-wrap: wrap
    justify-content: center
    background-color: #f9f9f9

    &__header
        width: 100%
        display: flex
        margin: 0 0 10px 0
        font-weight: bold

    &__body
        width: 100%
        display: flex
        justify-content: left

    .button-vote-up
    .button-vote-down
        width: 160px
        min-width: 50px
        margin: 0 0 20px 0
        padding: 10px
        color: #fff
        font-size: 14px
        cursor: pointer
        border: 0

    .button-vote-up
        background-color: $colors.green
        &:hover
            background-color: lighten($colors.green, 15%)

    .button-vote-down
        background-color: $colors.red
        &:hover
            background-color: lighten($colors.red, 15%)