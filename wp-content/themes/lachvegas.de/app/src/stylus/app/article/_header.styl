.article-header
  display: block

.article-subtitle
  display: block
  margin: 0 0 10px 0
  color: #909090
  font-size: 14px
  font-weight: 400
  


  .article-title
    display: block
    font-size: 32px

    & > a
      transition: all 150ms ease-in-out

      &:hover
        color: $colors.black



  .article-author-info
    padding: 10px 0
    display: inline-block

  .article-meta
    padding: 0
    display: none
    font-size: 11px


  .article-meta
    color: lighten($colors.black, 70%)

  .article-stats
    float: right

  .article-statistics
    display: block
    padding: 0

    .article-views
    .article-likes
    .article-comments
      margin: 0 10px 0 0
      padding: 4px 0
      font-size: 12px
      color: $colors.grey

      &:after
        content: '|'
        margin: 0 0px 0 6px
        display: inline-block

      &:last-child:after
        display: none



  .article-excerpt
    margin: 20px 0
    font-weight: bold



  .article-views
  .article-likes
  .article-comments
    margin: 0
    float: left

  .article-likes
  a.article-comments
    padding: 10px 15px
    cursor: pointer
    color: $colors.orange
    transition: background-color 150ms ease-in-out

    &:hover
      text-decoration: none
      background-color: alpha($colors.black, 10%)

