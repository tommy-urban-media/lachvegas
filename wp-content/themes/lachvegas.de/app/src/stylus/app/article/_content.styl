

.article-title
  margin: 0 0 15px 0

  & > a:hover
    color: $colors.blue


.article-content
  margin: 20px 0


.article-excerpt
.article-content
  clearfix()

  p
    margin: 0 0 15px 0
    color: $colors.black
    font-size: 13px
    line-height: 165%

    @media $query.m
      font-size: 15px



  ol
    padding-left: 36px
    counter-reset: ol-counter
    list-style: none

    li
      min-height: 34px
      counter-increment: ol-counter
      position: relative
      line-height: 28px 

      &:before
        width: 24px
        height: 24px
        content: counter(ol-counter)
        color: $colors.red
        font-size: 13px
        font-weight: bold
        line-height: 24px
        text-align: center
        position: absolute
        top: 6px 
        left: -36px
        border-radius: 50%
        background-color: #303030
        transform: rotate(5deg)

      &:nth-child(2n)
        background-color: #f9f9f9
      &:nth-child(1n):before
        transform: rotate(-3deg)
      &:nth-child(3n):before
        transform: rotate(3deg)
      &:nth-child(4n):before
        transform: rotate(-6deg)
      &:nth-child(5n):before
        transform: rotate(-5deg)
      &:nth-child(6n):before
        transform: rotate(2deg)
      &:nth-child(7n):before
        transform: rotate(3deg)
      &:nth-child(8n):before
        transform: rotate(-4deg)
      &:nth-child(9n):before
        transform: rotate(3deg)

    @media $query.m
      padding-left: 40px
      li
        &:before
          width: 28px
          height: 28px
          font-size: 13px
          line-height: 28px
          top: 6px 
          left: -40px




  ul
    padding-left: 20px
    list-style: disc

  ol
  ul
    li
      margin: 0 0 10px 0
      font-size: 13px
      line-height: 32px

      @media $query.m
        font-size: 15px


  table
    width: 100%
    overflow: auto

    th
    td
      padding: 8px 12px
      text-align: left
      white-space: nowrap

    td[align="right"]
      text-align: right

    th
    thead td
      padding: 8px 12px
      color: $colors.white
      background-color: $colors.black

    tbody

      tr

        &:nth-child(2n+1)
          td
            background-color: darken($colors.white, 5%)


        &.highlight
          td
            color: $colors.white
            background-color: lighten($colors.orange, 20%)

            a
              color: $colors.white
              text-decoration: underline
