.grid-wrapper
    width: 100%
    max-width: 1440px
    //margin-bottom: 15px
    
    @media screen and (min-width: 1000px)
        display: grid
        grid-gap: 15px
        grid-auto-flow: column dense
        grid-template-columns: repeat(12, minmax(60px, 16fr))
        grid-template-rows: repeat(7, 150px)
        justify-content: center
        align-content: end
    
    .grid-item
        padding: 0
        position: relative
        color: #fff
        background-color: #323232
        background-repeat: no-repeat
        background-size: 100% 100%
        
        &:nth-child(1)
            grid-column: 1 / 5
            grid-row: 1 / 1
            background-color: #898989
        &:nth-child(2)
            grid-column: 1 / 5
            grid-row: 2 / 2
            background-color: #000090
        &:nth-child(3)
            grid-column: 5 / 9
            grid-row: 1 / 3
            background-color: #009000
        &:nth-child(4)
            grid-column: 9 / 11
            grid-row: 1
            background-color: #909000
        &:nth-child(5)
            grid-column: 11 / 13
            grid-row: 1
            background-color: #909000
        &:nth-child(6)
            grid-column: 9 / 11
            grid-row: 2
            background-color: #9060b0
        &:nth-child(7)
            grid-column: 11 / 13
            grid-row: 2 / 4
            background-color: #9060b0
        &:nth-child(8)
            grid-column: 1 / 3
            grid-row: 3
            background-color: #9060b0
        &:nth-child(9)
            grid-column: 3 / 7
            grid-row: 3
            background-color: #9060b0
        &:nth-child(10)
            grid-column: 7 / 9
            grid-row: 3
            background-color: #9060b0
        &:nth-child(11)
            grid-column: 9 / 11
            grid-row: 3
            background-color: #9060b0
        &:nth-child(12)
            grid-column: 1 / 3
            grid-row: 4
            background-color: #9060b0
        &:nth-child(13)
            grid-column: 3 / 5
            grid-row: 4
            background-color: #9060b0
        &:nth-child(14)
            grid-column: 5 / 9
            grid-row: 4
            background-color: #9060b0
        &:nth-child(15)
            grid-column: 9 / 13
            grid-row: 4 / 6
            background-color: #9060b0
        &:nth-child(16)
            grid-column: 1 / 9
            grid-row: 5
            background-color: #9060b0
        &:nth-child(17)
            grid-column: 1 / 5
            grid-row: 6 / 8
            background-color: #9060b0
        &:nth-child(18)
            grid-column: 5 / 13
            grid-row: 6
            background-color: #9060b0
        &:nth-child(19)
            grid-column: 5 / 7
            grid-row: 7
            background-color: #9060b0
        &:nth-child(20)
            grid-column: 7 / 13
            grid-row: 7
            background-color: #9060b0
            
            
    img
        width: 100%
        height: auto
        max-height: 100%
        display: block
        
            
