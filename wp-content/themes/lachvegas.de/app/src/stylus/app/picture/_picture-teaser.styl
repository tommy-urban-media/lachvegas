.picture-teaser
    width: 100%
    margin: 0 auto 40px auto
    padding: 40px
    background-color: #808080
    box-shadow: inset 0 0 35px alpha(#000, 0.35)

    &__body
        max-width: 480px
        margin: 0 auto
        display: block

    &__footer
        max-width: 480px
        margin: 0 auto
        display: flex
        justify-content: space-between
        align-items: flex-start

    .post-title
        color: #fff

    .post-image
        border: 1px solid #f0f0f0


    .picture-tags
        display: flex
        justify-content: space-between
        color: #fff
        font-size: 13px

        .picture-tags-title
            margin-right: 10px

        .tags
            padding: 0
            display: flex

        .tag
            margin-right: 10px
            color: #fff

            a
                color: #fff
                font-weight: bold


    .picture-socials
        display: flex
        justify-content: space-between
        align-items: flex-start

        & > div
            height: 22px
            margin-left: 10px

        .pinterest-share
            margin-top: -1px
