.fortune-cookie
  width: 100%
  margin: 0
  padding: 20px
  display: flex
  justify-content: center
  align-items: center
  background-color: #f0f0f0
  //border: 1px solid #e9e9e9
  position: relative 
  background: linear-gradient(-45deg, #EE7752, #E73C7E, #23A6D5, #23D5AB)
  background-size: 400% 400%
  animation: AnimationName 15s ease infinite
  

  &__stage
    display: block

  &__badge
    width: 180px
    height: 180px
    display: flex
    justify-content: center
    align-items: center
    text-align: center
    border-radius: 50%
    background: #fff url('../fortune-cookie.svg') center center no-repeat
    background-size: 80%
    box-shadow: 5px 5px 10px rgba(50,50,50, 0.2), inset 10px 0 20px rgba(128,128,128,0.4), inset -2px 0 20px rgba(128,128,128,0.5);

  &__info
  &__ribbon
    width: 360px
    min-width: 360px
    display: none
    padding: 10px 20px
    font-size: 14px
    font-family: Arial, sans-serif
    text-align: left
    background-color: alpha(#fff, 0.85)
    box-shadow: 0 0 5px #606060

  &__info
    display: block

  &__button
    width: auto
    min-width: 72px
    margin: 0
    padding: 4px 12px
    cursor: pointer
    line-height: 135%

    &:hover
      background-color: #84d4d1


  



@keyframes AnimationName
    0%
      background-position: 0% 50%
    50%
      background-position: 100% 50%
    100%
      background-position: 0% 50%