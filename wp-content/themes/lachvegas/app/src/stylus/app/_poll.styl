.poll
  width: auto
  margin: 0
  padding: 20px
  display: block
  background-color: #f0f0f0
  border: 1px solid #e9e9e9
  position: relative

  &.state-is-pending
    &:before
      content: 'Wird gespeichert ...'
      width: 100%
      height: 100%
      display: flex
      justify-content: center
      align-items: center
      color: #fff
      font-size: 32px
      text-shadow: 0 0 1px #404040
      z-index: 2
      position: absolute
      left: 0
      top: 0
      background-color: alpha(#84d4d1, 50%)
  
  &__stage
    width: 100%
    padding: 0

  &__title
    margin: 10px 0
    font-size: 24px

  &__answers
    width: 100%
    max-width: 600px
    display: flex
    justify-content: left
    flex-wrap: wrap
    list-style: none !important

    .button
      width: auto
      min-width: 72px
      margin: 0
      padding: 4px 12px
      margin-right: 5px
      text-align: left
      line-height: 135%

      &:hover
        background-color: #84d4d1

  &__answers__item
    width: 100%
    margin: 0 0 5px 0 !important
    padding: 0
    list-style: none


  &__results__wrapper
    margin-top: 20px
    padding-top: 20px
    border-top: 1px solid #c0c0c0
    display: none

  &__results
    padding: 0
    border: 1px solid #f0f0f0
    display: flex
    justify-content: space-between

  &__results__title
    margin: 20px 0 10px 0
    display: block

  &__results__number
    color: #000000
    font-weight: bold

  &__results__text
    width: 100px
    font-weight: bold

  &__results__list
    width: 100%

  &__results__list__item
    margin: 0 0 4px 0
    display: flex
    justify-content: left
    align-items: center

  &__results__list__title
    width: 50%
    min-width: 50%
    padding: 0 10px
    font-size: 12px
    text-align: right

  &__results__list__bar
    width: auto
    height: 32px
    padding: 2px 4px
    display: flex
    align-items: center
    color: #fff
    font-size: 13px
    text-shadow: 0 0 1px #404040
    background-color: #84d4d1
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px
    transition: width 250ms ease-in-out 150ms

  

