.teasers-gender
	display: flex
	align-items: stretch
	justify-content: space-between
	flex-wrap: wrap

	&__content
		z-index: 2
		position: relative

	&__item
		width: 100%
		padding: 35px 50px
		color: #fff
		position: relative
		background-size: cover

		@media screen and (min-width: 960px)
			width: 50%

		&:before
			width: 100%
			height: 100%
			content: ''
			position: absolute
			left: 0
			top: 0

		&:nth-child(1)
			background-image: url('../../../../../../wp-content/uploads/2018/11/66f2c81e-47ea-4fa5-aa06-c8720a50c6d5-1000x563.jpg')

			&:before
				background: alpha(#823434, 0.7)

			strong
				color: saturate(#ff9898, 60%)

			.icon
				position: absolute
				top: 22px
				left: 0
				color: #ff9898
				font-size: 150px
				opacity: 0.5

			a 
				padding: 6px 12px
				color: #fff
				font-weight: 700
				background-color: saturate(#ff9898, 20%)

				&:hover
					background-color: saturate(#ff9898, 40%)


		&:nth-child(2)
			background-image: url('../../../../../../wp-content/uploads/2018/11/2b970950-d058-4a0f-a6f6-26c010cad7c4-1000x563.jpg')
			
			&:before
				background: alpha(#5d95a7, 0.7)

			strong
				color: saturate(#b1e0ef, 60%)

			.icon
				position: absolute
				top: 22px
				left: 0
				color: #b1e0ef
				font-size: 150px
				opacity: 0.5

			a 
				padding: 6px 12px
				color: #fff
				font-weight: 700
				background-color: saturate(#b1e0ef, 20%)

				&:hover
					background-color: saturate(#b1e0ef, 40%)



	h3
		margin: 20px 0 20px 0
		font-size: 26px
		text-transform: uppercase

	h3, p, a
		text-shadow: alpha(#000, 0.5) 0 1px 1px

	p
		margin: 0 0 20px 0
		font-size: 18px

	a
		margin: 0 0 20px 0
		padding: 4px 12px
		font-size: 20px


	.gender-grid
		display: flex
  	justify-content: space-between
		font-size: 24px
		position: relative

	.gender-grid-item
		flex: 1
		display: block

	

