.quiz
  width: 100%
  margin: 0
  display: block
  
  &__item
    width: 100%
    margin: 20px 0
    padding: 20px 0
    display: block
    border-top: 1px solid #f0f0f0

    &--state-false
      background-color: $colors.red

    &--state-true
      background-color: $colors.green

    &__title
      font-size: 18px

    &__content
      padding: 0


  &__actions
    margin: 25px 0
    display: flex
    flex-wrap: wrap
    justify-content: center

  &__button
    width: 100%
    padding: 6px 12px
    margin: 0 4px
    cursor: pointer
    color: white
    text-align: left
    border: 0
    outline: none
    background-color: $colors.grey

    &:disabled
      opacity: 0.2
      cursor: not-allowed

    &:hover
      background-color: $colors.red

    &--true
      width: auto
      text-align: center
      background-color: $colors.green
      &:hover
        background-color: lighten($colors.green, 10%)


    &--false
      width: auto
      text-align: center
      background-color: $colors.red
      &:hover
        background-color: lighten($colors.red, 10%)


  &__answer-text
    padding: 20px
    border: 1px solid #f0f0f0
    display: none
    font-style: italic

  .state-is-true
  .state-is-false
    margin: 0 2px
    margin-right: 10px
    font-size: 20px
    color: $colors.green

  .state-is-false
    color: $colors.red




  &__answers
    display: block
    counter-reset: quiz-counter
    list-style: none
    border: 1px solid #f0f0f0
    border-bottom: 0

  &__answer
    padding: 10px
    padding-left: 48px
    display: block
    cursor: pointer
    counter-increment: quiz-counter
    position: relative
    border-bottom: 1px solid #f0f0f0

    &:before
      width: 24px
      height: 24px
      content: counter(quiz-counter)
      color: white
      font-size: 14px
      font-weight: bold
      line-height: 24px
      text-align: center
      position: absolute
      top: 8px 
      left: 10px
      border-radius: 50%
      background-color: #c0c0c0
      // transform: rotate(5deg)

    &:hover
      color: white
      background-color: $colors.red

