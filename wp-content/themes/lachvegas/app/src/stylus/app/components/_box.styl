
.box

  display: block
  padding: 10px
  background-color: $colors.white
  border: 1px solid alpha($colors.grey, 50%)
  box-shadow: 0 2px 3px alpha($colors.black, 10%)


  &-headline
  &-title
    margin: 0
    padding: 0 0 10px 0
    font-size: 14px
    border-bottom: 1px solid darken($colors.white, 10%)


  &-content
    padding: 10px 0



.infobox
  width: 300px
  height: 300px
  display: block
  margin: 0 auto 25px auto
  padding-top: 15px
  align-content: center
  justify-content: center
  position: relative
  overflow: hidden

  &--portrait
    width: 300px
    height: 600px
    text-align: center

  &--banner
    width: 100%
    max-height: 800px
    height: 120px
    text-align: left

  &:before
    content: 'Schei√ü Anzeige'
    width: 100%
    color: #c0c0c0
    font-size: 10px
    text-align: center
    position: absolute
    top: 0
    left: 0


  &__image
    z-index: 1
    position: absolute

  &__content
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    padding: 50px 20px
    color: #fff
    z-index: 2
    position: absolute
    top: 0
    left: 0

    .product-headline
      font-size: 32px
      font-weight: 700
      letter-spacing: 1px
      text-transform: uppercase

    .product-title
      display: block
      margin: 20px auto
      padding: 5px 25px
      color: #ffffff
      font-size: 32px
      font-weight: 900
      background-color: #ce0000

    .product-text
      padding: 20px
      text-shadow: #000 0 0 1px
      background: alpha(#000, 0.8)

    .product-cta-button
      margin: 20px auto
      padding: 10px 0
      color: #fff
      background: #35e0c4


    
    





.quote-box
  width: 100%
  max-width: 600px
  height: 100%
  margin: 0 auto 30px auto
  display: block
  text-align: center

  .post-title
    margin: 0 10%
    max-width: 80%
    display: block
    color: #fff
    font-size: 28px
    font-weight: 700
    letter-spacing: 1px
    position: absolute
    top: 15%
    text-shadow: #000 0 1px 3px

  .post-image
    margin: 0

    &:before
      content: ''
      width: 100%
      height: 100%
      background-color: alpha(#000, 0.5)
      position: absolute
      left: 0
      top: 0 

  img
    position: relative