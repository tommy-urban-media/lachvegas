
.entry-content

	.table
		width: 100%
		max-width: 960px
		margin: 0 auto
		overflow: hidden
		appearance: none
		
		th
			padding: 5px
			color: #fff
			font-weight: normal
			text-align: left
			background-color: #909090

		tr
			background-color: #f9f9f9 

			&:nth-child(2n+1)
				background-color: darken(#f9f9f9, 5%)
	
			td
				padding: 5px 10px
				font-size: 13px
				border-right: 1px solid #e0e0e0
				border-bottom: 1px solid #e0e0e0


		.table-footer 
			font-size: 11px
			background-color: transparent !important
			
			td 
				text-align: right
				border: 0 !important
				


		&.table-light
			th
				color: #505050
				font-weight: bold
				background-color: darken(#f9f9f9, 5%)