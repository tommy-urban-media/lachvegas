

.calendar-wrapper
  text-align: left
    
.calendar
  width: 100%
  height: 560px
  display: block
  position: relative
  background-color: #B8E64C

  &__item
    width: 140px
    height: 200px
    display: block
    cursor: pointer
    text-align: center
    z-index: 1
    position: absolute
    
    &:nth-child(1)
      transform: rotate(2deg)
      left: 600px 
      top: 40px 
    &:nth-child(2)
      transform: rotate(-2deg)
      left: 60px 
      top: 60px  
    &:nth-child(3)
      transform: rotate(-1deg)
      left: 410px 
      top: 320px  
    &:nth-child(4)
      transform: rotate(2deg)
      left: 780px 
      top: 80px
    &:nth-child(5)
      transform: rotate(3deg)
      left: 430px 
      top: 80px
    &:nth-child(6)
      transform: rotate(-2deg)
      left: 760px 
      top: 300px
    &:nth-child(7)
      transform: rotate(1deg)
      left: 250px 
      top: 290px
    &:nth-child(8)
      transform: rotate(0deg)
      left: 230px 
      top: 65px
    &:nth-child(9)
      transform: rotate(2deg)
      left: 590px 
      top: 280px
    &:nth-child(10)
      transform: rotate(-1deg)
      left: 80px 
      top: 300px

    &__viewport
      width: 100%
      height: 100%
      display: block
      z-index: 2
      position: absolute
      left: 0
      top: 0
      background: url('../egg.svg') no-repeat center center
      background-size: 140px 200px

    &__date
      padding-top: 115px
      color: $colors.white
      font-weight: 700
      font-size: 22px
      z-index: 3
      position: relative

      &--day
        color: $colors.black
        font-size: 11px
        font-weight: 300

    &__text
      width: 130px
      height: 160px
      padding: 10px
      display: none
      font-size: 11px
      z-index: 1
      position: absolute
      left: 5px
      top: -20px
      background: #fff
      border-radius: 8px



    &--cracked

      .calendar__item__viewport
        background-image: url('../egg-cracked.svg')

      .calendar__item__date
        padding-top: 140px

      .calendar__item__text
        display: block



    


