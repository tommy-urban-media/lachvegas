
.list
	width: 100%
	display: block
	
	ul
		display: block
		
		&:after
			content: ''
			display: block
			clear: both
		
		li
			width: 23.5%
			margin: 0 1% 1.5% 1%
			float: left
			
			&:first-child,
			&:nth-child(4n+1)
				margin-left: 0
				
			&:nth-child(4n+4)
				margin-right: 0
				


	&--teaser
		padding: 0 5%
		display: flex
		justify-content: space-between
		flex-wrap: wrap

		@media screen and (min-width: 600px)
			padding: 0 40px

		.list-item
			width: 100%
			//height: 180px
			display: block
			padding: 0 0 20px 0
			margin: 0 0 20px 0
			border-bottom: 1px solid #e0e0e0
			//background: url('http://localhost/lachvegas/wp-content/uploads/2018/11/background-board-carpentry-326333-300x200.jpg')
			//background-position: center center
			//background-repeat: no-repeat
			//background-size: cover

			@media screen and (min-width: 600px)
				padding: 0 0 20px 0

			&:nth-child(2)
			&:nth-child(4)
			&:nth-child(9)
				//background-image: url('http://localhost/lachvegas/wp-content/uploads/2018/11/abstract-ancient-antique-235985-300x201.jpg')

			&:nth-child(3)
			&:nth-child(5)
			&:nth-child(7)
				//background-image: url('http://localhost/lachvegas/wp-content/uploads/2018/11/abstract-background-dark-247671-300x200.jpg')


		.post-title
			display: block
			margin: 0 0 10px 0
			color: #303030
			font-size: 18px
			font-weight: 700
			line-height: 130%
			text-align: left

			&:hover
				color: $colors.red



	&--teaser-text
		padding: 0 30px
		display: flex
		justify-content: space-between
		flex-wrap: wrap

		.list-item
			width: 48%
			max-width: 48%
			height: auto
			display: block
			padding: 25px
			margin: 1%



	&--slider
		width: 100%
		display: flex
		overflow: hidden

		.list-item
			width: 100%
			min-width: 600px
			margin: 0 10%
			display: block
			text-align: center

		.post-title
			margin: 0 10%
			max-width: 80%
			display: block
			color: #fff
			font-size: 42px
			font-weight: 700
			letter-spacing: 1px
			position: relative
			text-shadow: #000 0 1px 3px

		.post-image
			width: 100%
			height: auto
			margin: 0 auto
			display: flex
			justify-content: center
			align-items: center
			position: relative

			img
				position: absolute

			&:before
				content: ''
				width: 100%
				height: 100% 
				background-color: alpha(#000, 0.5)
				position: absolute
				left: 0
				top: 0 


	&--news
	&--category
	&--statistics 

		& > li
			margin: 0 0 20px 0
			padding: 0 0 20px 0
			display: block
			border-bottom: 1px solid #e0e0e0

			&:last-child
				border-bottom: 0

			&:after
				content: ''
				display: table
				clear: both

		.number
			float: left
			font-size: 48px
			padding-right: 10px

		.post-title
			display: block
			margin: 0 0 10px 0
			color: #303030
			font-size: 18px
			font-weight: 700
			line-height: 130%
			text-align: left

			&:hover
				color: $colors.red

		.post-image
			max-height: 165px
			overflow: hidden

		.post-meta
			display: block
			padding-bottom: 0
			font-size: 13px
			font-weight: 600
			color: #505050

			a
				color: $colors.red

				&:hover
					text-decoration: underline

				&.post-tag-link
					color: #505050

				&:last-child
					&:after
						content: ''
						margin: 0

				&:after
					content: '|'
					margin: 0 4px 0 8px
					display: inline-block
					color: #f0f0f0


		.post-date
			color: #505050
			font-weight: 500


		.post-content
			display: block
			color: #505050
			font-size: 90%
			line-height: 150%

			.read-more-link
				display: block
				margin: 5px 0 0 0
				color: #505050
				font-weight: 700

				&:hover
					color: $colors.red


	&--category
		padding: 0 5%
		display: flex
		flex-wrap: wrap
		justify-content: left

		@media screen and (min-width: 600px)
			padding: 0 40px

		.list-item
			width: 100%
			border: 0

			@media screen and (min-width: 600px)
				width: 31.9999%

				&:nth-child(1)
					margin-right: 1%
				&:nth-child(2)
					margin: 0 1%
				&:nth-child(3)
					margin-left: 1%

		.post-title
			font-size: 16px



	&--statistics
		padding: 0 5%

		@media screen and (min-width: 600px)
			padding: 0 40px
			display: flex
			flex-wrap: wrap
			justify-content: space-between

		.list-item
			width: 100%

			@media screen and (min-width: 600px)
				display: flex
				align-items: center
				justify-content: space-between


			.number
				float: none
				font-size: 13px
				font-weight: bold

				@media screen and (min-width: 600px)
					width: 20%
					float: left
					font-size: 32px

			p
				@media screen and (min-width: 600px)
					width: 80%
					font-size: 20px





	&--featured
		display: grid
		grid-gap: 20px
		grid-template-columns: 1fr 1fr 1fr

		.list-item
			display: block


	&--shortnews
		display: block

		.list-item
			width: 100%
			margin: 0
			padding: 0

			.post-meta
				font-size: 12px
				font-weight: 600

			a
				@extends $fontStyleDefault
				margin: 0 0 8px 0
				padding: 0 0 8px 0
				display: block
				border-bottom: 1px solid #f0f0f0

			&:hover a
				text-decoration: underline

			&:last-child
				a
					border: 0



	&--tags
		display: flex
		flex-wrap: wrap
		justify-content: flex-start

		.list-item
			margin: 0 10px 10px 0
			background: #f0f0f0

			a
				padding: 4px 8px
				display: block
				font-size: 13px

			&:hover
				background: #e0e0e0
				
			