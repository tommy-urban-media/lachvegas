
.section
	width: 100%
	margin: 0 auto
	padding: 0
	display: block
	position: relative
	background: $colors.white
	//border: 1px solid $colors.grey

	&__area
		max-width: 100%
		min-width: 100%
		margin: 0 auto
		display: flex


	&__header
		margin: 0 0 20px 0
		padding: 0 5%
		display: flex
		justify-content: space-between
		align-items: baseline

		@media screen and (min-width: 1000px)
			padding: 0 40px

	&__title
		margin: 0
		color: #303030
		font-size: 24px
		font-weight: 300
		white-space: nowrap

		a
			color: #303030

			&:hover
				color: $colors.red


	&__separator
		width: 100%
		margin: 0 0 0 10px
		display: block
		border-top: 4px solid #f0f0f0


	&__content
		padding: 0
		display: block
		text-align: left

	&-content
		margin: 0
		padding: 0 40px
		display: block

	&__area__full
		width: 100%
		padding: 0 40px

	&__area__main
		width: 70%
		padding: 0 25px 0 50px

	&__area__sidebar
		width: 30%
		padding: 0 50px 0 25px



	&__footer
		margin: 20px 0 0 0
		display: flex
		justify-content: center



	&--home
		background-color: transparent

	&--people
		background: #fff



	&--gender
		width: 100%
		margin: 0 40px
		padding: 0
		display: flex
		justify-content: space-between
		color: #fff

		& > div
			width: 48%
			padding: 35px 50px
			position: relative
			background-size: cover

			& > div
				z-index: 1
				position: relative

				h3
					margin: 20px 0 20px 0
					font-size: 26px
					text-transform: uppercase

				h3, p, a
					text-shadow: alpha(#000, 0.5) 0 1px 1px

				p
					margin: 0 0 20px 0
					font-size: 18px

				a
					margin: 0 0 20px 0
					padding: 4px 12px
					font-size: 20px


			&:before
				width: 100%
				height: 100%
				content: ''
				position: absolute
				left: 0
				top: 0


		&--man
			background: url('../../../../../../wp-content/uploads/2018/11/66f2c81e-47ea-4fa5-aa06-c8720a50c6d5-1000x563.jpg') center center no-repeat

			&:before
				background: alpha(#ffe4e4, 0.7)

			a 
				color: #fff
				font-weight: 700
				background-color: saturate(#ff9898, 20%)

				&:hover
					background-color: saturate(#ff9898, 40%)
			
		&--woman
			background: url('../../../../../../wp-content/uploads/2018/11/2b970950-d058-4a0f-a6f6-26c010cad7c4-1000x563.jpg') center center no-repeat
			
			&:before
				background: alpha(#b1e0ef, 0.7)

			a 
				color: #fff
				font-weight: 700
				background-color: saturate(#b1e0ef, 20%)

				&:hover
					background-color: saturate(#b1e0ef, 40%)



	&-search
		padding: 0
		background: none
		border: 0

		.section-headline
			padding: 0
			display: none

		.section-content
			padding: 0

		.form

			.search-field
				width: 70%
				float: left
				transition: border-color 150ms ease-in-out

				&:focus
					border-color: $colors.blue

			.search-button
				width: 30%
				float: left




	&-latest-posts
		display: block

		li
			clearfix()
			margin: 0 0 10px 0
			padding: 0 0 10px 0

		img
			width: 100px
			height: 100px
			float: left

		.post-title
			margin: 0
			display: block


	&-tags

		li
			width: 50%
			margin: 0
			float: left




	&-featured-post
	&-featured-project

		.post-title
			margin: 5px 0
			font-size: 1.05em

		img
			width: 100%
			display: block
