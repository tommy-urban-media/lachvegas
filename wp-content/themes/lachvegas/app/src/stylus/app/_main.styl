
.main
	width: 100%
	max-width: 1000px
	margin: 40px auto
	display: block
	

.content-wrapper
	width: 1000px
	margin: 0 auto
	display: flex

.content
	padding: 0
	background-color: white
	border: 1px solid #e9e9e9
	box-shadow: 0 0 2px #fff

	&__area
		max-width: 100%
		min-width: 100%
		margin: 25px auto
		padding: 25px 0
		display: flex
		border-bottom: 1px solid #e9e9e9

		&--primary
			width: 65%
			padding: 0 25px 0 50px

		&--secondary
			width: 35%
			padding: 0 50px 0 25px